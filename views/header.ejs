<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8" />
	<title>Blog</title>
	<link rel="stylesheet" href="/stylesheets/style.css"></head>
	<link rel="stylesheet" href="/kindeditor/themes/default/default.css" />
	<script charset="utf-8" src="/kindeditor/kindeditor-min.js"></script>
	<script charset="utf-8" src="/kindeditor/lang/zh_CN.js"></script>
	<script>
		var editor;
		KindEditor.ready(function(K) {
			editor = K.create('textarea', {
				allowFileManager : false,
				uploadjson :'/upload',
				items: [
					'fontname','fontsize','|','foreclolr','hilitecolor','bold','italic','underline','removeformat','|','justifyleft','justifycenter','justifyright','insertorderedlist','insertunorderedlist','|','emoticons','image','link'
				]
			});
		});
	</script>
<body>

	<header>
		<h1><%= title %></h1>
	</header>

	<nav>
		<span><a title="主页" href="/">home/主页</a></span>
		<span><a title="存档" href="/archive">archive/存档</a></span>
		<span><a title="标签" href="/tags">tags/标签</a></span>
		<span><a title="友情链接" href="/links">links/友情链接</a></span>
		<!-- 首页user -->
		<% if (user) { %>
			<span><a title="上传" href="/upload">upload/上传</a></span>
			<span><a title="发表" href="/post">post/发表</a></span>
			<span><a title="登出" href="/logout">logout/登出</a></span>
		<% } else { %>
			<span><a title="登录" href="/login">login/登录</a></span>
			<span><a title="注册" href="/reg">register/注册</a></span>
		<% } %>
		<span><form action="/search" method="GET"><input type="text" name="keyword" placeholder="SEARCH-搜索" class="search" /></form></span>
	</nav>

	<article>
	<% if (success) { %>
		<div><%= success %></div>
	<% } %>
	<% if (error) { %>
		<div><%= error %> </div>
	<% } %>